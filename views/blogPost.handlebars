<h2>{{title}}</h2>
<p>{{user.userName}}</p>
<p>{{date_created}}</p>
<p>{{content}}</p>
<p>{{comment.content}}</p>


<div class="container-fluid" > 
    <h5>Comments:</h5>
        <ul style="list-style-type: none;">
            {{#each comment as |comment|}}
            <div class="card text-center" style="margin-bottom: 30px; margin-right:20%; margin-left:20%">
              <div class="card-header" style="background-color:rgb(255, 168, 102)">
                Fresh Post!
              </div>
              <div class="card-body" style="background-color: rgb(208, 248, 247);">
                <h5 class="card-title"><li><a href="/blogPost/{{comment.content}}">{{comment.date_created}}</a></li></h5>
                <p class="card-text">{{comment.}}</p>
{{!-- 
              </div>
              <div class="card-footer text-muted" style="background-color: rgb(202, 201, 249);">
                <li>{{post.date_created}}</li>
              </div>
              </div> --}}
            {{/each}}
        </ul>
</div>

<div class="row">
    <div class="col-12 mx-auto mt-3">
        <form id="comment-form">
            <div class="form-group">
                <label for="comment-form"><strong>COMMENT</strong></label>
                <textarea class="form-control {{this.id}}" style="background: beige" id="comment" rows="3"></textarea>
                <div class="text-center">
                    <button type="submit" id="submit-comment" class="text-center mt-3 btn btn-dark btn-lg btn-block">Submit</button>
                </div> 
            </div>
        </form>
    </div>
</div>

<style>
    #comment-form{
        padding: 45px;
    }
</style>


<script src="/js/newComment.js"></script>